{
  "name": "rsg-voting",
  "version": "1.0.0",
  "description": "An app that allows Rhodes Student Government to more accurately count election results",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rhodes-CS-comp486/RSG-Voting.git"
  },
  "keywords": [
    "voting",
    "election",
    "rsg"
  ],
  "author": "Rhodes Student Government",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Rhodes-CS-comp486/RSG-Voting/issues"
  },
  "homepage": "https://github.com/Rhodes-CS-comp486/RSG-Voting#readme",
  "build": {
    "appId": "edu.rhodes.rsg.voting",
    "productName": "RSG Voting",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.7.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
